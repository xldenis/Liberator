<!DOCTYPE html>
<html>
  <head>
    <title><%= content_for?(:title) ? yield(:title) : "Untitled" %></title>
    <link rel="stylesheet" href="http://twitter.github.com/bootstrap/assets/css/bootstrap-1.2.0.min.css">
    <%= stylesheet_link_tag "application" %>
    <%= javascript_include_tag "application" %>
    <script type="text/javascript">jQuery.ajaxSetup({ beforeSend: function (xhr) { xhr.setRequestHeader("Accept", "text/javascript"); } });</script>
    <%= csrf_meta_tag %>
    <%= yield(:head) %>
  </head>
  <body>
    <div id="container">
      <% flash.each do |name, msg| %>
        <%= content_tag :div, msg, :id => "alert-message #{name}" %>
      <% end %>
        <div class="topbar-wrapper">
        <div class="topbar">
        <div class="topbar-inner">
        <div class="container">
        <h3><%= link_to "Liberator", :root  %></h3>
        
          <% if user_signed_in? %>
          <ul class="nav">
          <li><%= link_to "Categories",categories_path %></li>
          <% if can? :read, Article %>
          <li class="dropdown"><%= link_to "Articles","#",:class=>"dropdown-toggle" %>
          <ul class="dropdown-menu">
          <li><%= link_to "Manage Articles",articles_path %></li>
          <li><%= link_to "New Article",new_article_path%></li>
          </ul>
          </li>
            
          <% end %>
          <% if can? :manage, @users %>
          <li><%= link_to "Users", users_path %></li>
          <% end %>
          </ul>
          <ul class="nav secondary-nav">
          <li class = "dropdown"><%= link_to "Account","#",:class=> "dropdown-toggle" %>
          <ul class = "dropdown-menu" >
          <li><%= link_to "My Account", edit_user_registration_path %></li>
          <li><%= link_to "Logout", destroy_user_session_path %></li>
          </ul>
          </li>
          </ul>
          <% else %>
          <ul class="nav secondary-nav">
          <li><%= link_to "Login", new_user_session_path %></li>
          </ul>
          <% end %>
        </ul>
        </div>
        </div>
        </div>
        </div>
      <%= content_tag :h1, yield(:title) if show_title? %>
      <%= yield %>
    </div>
  </body>
</html>
