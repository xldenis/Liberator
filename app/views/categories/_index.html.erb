<% if articles %>
 	<% articles.each_with_index do |article,index| %>
       <div <% if index==0 %>
               class="article featured" <% else %>
               class="article secondary" <% end %>
               data-id="<%= if article then article.id else end %>"
               style= "background:url('<%= article.image_url(:large) if article && article.image? && index == 0%>');">
               <% if article %>
                      <div class="per-article-overlay">
                       <h2><%= article.title %></h2>
                       <p><%= article.slug %></p>
                       <% if index==0 %><p><%= truncate(article.content,:length=>450,:separator=>'.') %></p><% end %>
                       <%= link_to "Keep reading â†’", article %>
</div>
<% else %>
              <div class="per-article-overlay"> 
               <h2>Placeholder Title</h2>
               <p>Dummy text.</p>
              </div>
       <% end %>
       </div>

<% end %>
  
<% else %>
       <% 12.times do |index|%>
               <div <% if index==0 %>
                       class="article featured" <% else %>
                       class="article secondary" <% end %>>
                       <div class="per-article-overlay">
                        <h2>Placeholder Title</h2>
                        <p>Dummy text.</p>
                       </div>
               </div>
       <% end %>
       <% end %>
