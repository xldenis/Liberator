
<div <% if featured %>
  class="article featured" <% else %>
    class="article secondary" <% end %>
    data-id="<%= if article then article.id else end %>"
    style= "background:url('<%= article.image_url(:large) if article && article.image? && (index == 0|| index ==2)%>');
            <%= if !visible then "display:none;" end %> ">    
    <% if article %>
    <div class="per-article-overlay">
      <h2><%= link_to article.title, article %></h2>
      <p><%= article.byline %></p>
      <p><%= article.content.split(/((\r)?(\n)(\s)?){2}/).first%></p>
    </div>
    <% else %>
    <div class="per-article-overlay">
      <h2>Placeholder Title</h2>
      <p>Dummy text.</p>
    </div>
  <% end %>
  </div>
