<% if articles %>
 	<% articles.each_with_index do |article,index| %>
       <div <% if index==0 %>
               class="article featured" <% else %>
               class="article secondary" <% end %>
               data-id="<%= if article then article.id else end %>"
               style= "background:url('<%= article.image_url(:large) if article && article.image?%>');">
               <% if article %>
                       <h2><%= article.title %></h2>
                       <p><%= article.slug %></p>
                       <%= link_to "Keep reading â†’", article %>

<% else %>
               
               <h2>Placeholder Title</h2>
               <p>Dummy text.</p>
       <% end %>
       </div>

<% end %>

