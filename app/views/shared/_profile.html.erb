<% if user_signed_in? %>

<div id="userbar">
 
  <span class="status"> <%= current_user.role.upcase%> &#9997; </span>
  
  <div class="profile">
    <% if can? :create, Article %>
      <%= link_to "Write an Article",new_article_path %>
      <%= link_to "Edit Articles",articles_path %>
    <% end %>
    
    <% if can? :manage, @users %>
      <%= link_to "Edit Users", users_path %>
    <% end %>

    <%= link_to "My Account", edit_user_registration_path %>
    <%= link_to "Log Out", destroy_user_session_path %>
  </div>



</div>
<% end %>
