<%= form_for(@article,:html => {:multipart => true }) do |f| %>
<div id="post_errors"></div>
<p><%= f.label :title%></p>
<%= f.text_field :title %>
<p><%= f.label :slug%></p>
<%= f.text_field :slug %>
<p><%= f.label :content %></p>
<%= f.text_area :content%>
<p><%= f.label :category %></p>
<%= f.collection_select  :category_ids, Category.excludes(:id => Category.first.id),:id,:name,{} %>
<p>
<%= f.file_field :image %>
</p>
<p>
<%= f.label :tag_list %>
</p>
<%= f.text_field :tag_list %>

<p><%= f.submit %></p>
<% end %>

